<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>User Inspector</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: #f5f7fb;
      margin: 0;
      padding: 0;
      color: #111827;
    }
    .shell {
      max-width: 1100px;
      margin: 0 auto;
      padding: 24px 20px 40px;
    }
    a {
      color: #2563eb;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
    .top-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 16px;
    }
    .breadcrumb {
      font-size: 0.85rem;
      color: #6b7280;
    }
    .breadcrumb a {
      color: #4b5563;
    }
    h1 {
      margin: 4px 0 10px;
      font-size: 1.4rem;
    }
    .tag-row {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-bottom: 16px;
    }
    .pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 0.78rem;
      background: #e5e7eb;
      color: #374151;
    }
    .pill-label {
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.7rem;
      color: #6b7280;
    }
    .layout {
      display: grid;
      grid-template-columns: minmax(260px, 1.1fr) minmax(260px, 1.4fr);
      gap: 16px;
      align-items: flex-start;
    }
    .card {
      background: #ffffff;
      border-radius: 10px;
      padding: 14px 16px;
      box-shadow: 0 8px 20px rgba(15, 23, 42, 0.08);
      font-size: 0.9rem;
    }
    .card h2 {
      margin-top: 0;
      margin-bottom: 8px;
      font-size: 1rem;
    }
    .card h3 {
      margin-top: 12px;
      margin-bottom: 6px;
      font-size: 0.9rem;
      font-weight: 600;
    }
    .def-list {
      margin: 0;
      padding: 0;
      list-style: none;
      font-size: 0.88rem;
    }
    .def-list li {
      display: flex;
      justify-content: space-between;
      gap: 12px;
      padding: 2px 0;
    }
    .def-label {
      color: #6b7280;
      min-width: 110px;
    }
    .def-value {
      text-align: right;
      flex: 1;
      word-break: break-all;
    }
    .badge {
      display: inline-block;
      padding: 2px 6px;
      border-radius: 999px;
      font-size: 0.75rem;
    }
    .badge-student { background: #DBEAFE; color: #1D4ED8; }
    .badge-teacher { background: #FEF3C7; color: #B45309; }
    .badge-school_admin { background: #E5E7EB; color: #374151; }
    .badge-district_admin { background: #DCFCE7; color: #166534; }
    .badge-contact { background: #FCE7F3; color: #9D174D; }
    .badge-unknown { background: #F3F4F6; color: #6B7280; }

    .sections-list {
      margin: 0;
      padding: 0;
      list-style: none;
      font-size: 0.86rem;
    }
    .sections-list li {
      padding: 6px 0;
      border-bottom: 1px solid #e5e7eb;
    }
    .sections-list li:last-child {
      border-bottom: none;
    }
    .sec-name {
      font-weight: 600;
    }
    .sec-meta {
      font-size: 0.8rem;
      color: #6b7280;
    }
    .empty {
      font-size: 0.85rem;
      color: #9ca3af;
      font-style: italic;
    }
  </style>
</head>
<body>
  <div class="shell">
    <div class="top-bar">
      <div>
        <div class="breadcrumb">
          <a href="/admin">Admin Dashboard</a> · <span>User Inspector</span>
        </div>
        <h1><%= inspected.name || 'User' %></h1>
      </div>
      <div>
        <a href="/admin">← Back to Admin</a>
      </div>
    </div>

    <div class="tag-row">
      <div class="pill">
        <span class="pill-label">Clever ID</span>
        <span><%= inspected.cleverId %></span>
      </div>
      <% if (inspected.email) { %>
        <div class="pill">
          <span class="pill-label">Email</span>
          <span><%= inspected.email %></span>
        </div>
      <% } %>
      <% if (roles && roles.length) { %>
        <div class="pill">
          <span class="pill-label">Roles</span>
          <span>
            <% roles.forEach(function(r, idx) { %>
              <span class="badge badge-<%= r %>"><%= r %></span>
              <% if (idx < roles.length - 1) { %>, <% } %>
            <% }); %>
          </span>
        </div>
      <% } %>
    </div>

    <div class="layout">
      <!-- Left: profile & schools -->
      <div class="card">
        <h2>Profile</h2>
        <ul class="def-list">
          <li>
            <span class="def-label">Name</span>
            <span class="def-value"><%= inspected.name || '—' %></span>
          </li>
          <li>
            <span class="def-label">Email</span>
            <span class="def-value"><%= inspected.email || '—' %></span>
          </li>
          <li>
            <span class="def-label">Primary Role</span>
            <span class="def-value"><%= inspected.role || 'unknown' %></span>
          </li>
        </ul>

        <h3>Schools</h3>
        <% if (schools && schools.length) { %>
          <ul class="sections-list">
            <% schools.forEach(function(s) { %>
              <li>
                <div class="sec-name"><%= s.name || 'Unnamed School' %></div>
                <div class="sec-meta">School ID: <%= s.cleverId %></div>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="empty">No schools recorded for this user in the local database.</p>
        <% } %>
      </div>

      <!-- Right: sections as teacher / student -->
      <div class="card">
        <h2>Sections & Rosters</h2>

        <h3>As Teacher</h3>
        <% if (teacherSections && teacherSections.length) { %>
          <ul class="sections-list">
            <% teacherSections.forEach(function(sec) { %>
              <li>
                <div class="sec-name"><%= sec.sectionName || 'Untitled Section' %></div>
                <div class="sec-meta">
                  <%= sec.schoolName || ('School ID: ' + (sec.schoolId || '—')) %> ·
                  <%= sec.studentCount %> student<%= sec.studentCount === 1 ? '' : 's' %>
                </div>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="empty">No sections where this user is a teacher (based on current enrollments).</p>
        <% } %>

        <h3>As Student</h3>
        <% if (studentSections && studentSections.length) { %>
          <ul class="sections-list">
            <% studentSections.forEach(function(sec) { %>
              <li>
                <div class="sec-name"><%= sec.sectionName || 'Untitled Section' %></div>
                <div class="sec-meta">
                  <%= sec.schoolName || ('School ID: ' + (sec.schoolId || '—')) %> ·
                  <%= sec.teacherCount %> teacher<%= sec.teacherCount === 1 ? '' : 's' %>
                </div>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="empty">No sections where this user is a student (based on current enrollments).</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
